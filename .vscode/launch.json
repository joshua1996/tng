    "version": "0.2.0",
    "configurations": [

        {
            "name": "tng",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "tng (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "tng (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": ["--flavor", "development", "--target", "lib/main.dart" ]
        },
        {
            "name": "production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": ["--flavor", "production", "--target", "lib/main.dart" ]
        }
    ]
}